{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src", // Important: This should point to your source directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "moduleResolution": "NodeNext",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*", // This tells TypeScript to compile files in src
    "src/tests"
  ],
  "exclude": ["node_modules", "dist"]
}
